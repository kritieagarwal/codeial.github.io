<li>
    <p>
        <% if(locals.user && locals.user.id==comment.user.id){ %>
            <small>
                <a href="/comments/destroy/<%= comment.id %>">X</a>
            </small>
            <% } %>
                <%= comment.content %>
                    <br>
                    <small>
                        <%= comment.user.name %>
                    </small>

                    <!-- display likes of this comment, if user is logged in, then show link to toggle likes, else only show the count -->
                    <small>
                        <% if(locals.user){ %>
                            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>"
                                href="/likes/toggle/?id=<%= comment._id %>&type=Comment">
                                <%= comment.likes.length %> Likes
                            </a>
                            <% } else { %>
                                <%= comment.likes.length %> Likes
                                    <% } %>
                    </small>
    </p>
</li>